<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" vgap="10">

    <ListView fx:id="history_list" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ListView fx:id="history_item_list" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <VBox fx:id="history_details" GridPane.rowIndex="0" GridPane.columnIndex="3">
        <GridPane alignment="CENTER">
            <Label fx:id="history_trader" GridPane.rowIndex="0" GridPane.columnIndex="0" text="Trader: "/>
            <Label fx:id="history_sent_date" GridPane.rowIndex="2" GridPane.columnIndex="0" text="Sent date: "/>
            <Label fx:id="history_approved_date" GridPane.rowIndex="3" GridPane.columnIndex="0" text="Approved date: "/>
            <Label fx:id="history_pay_date" GridPane.rowIndex="4" GridPane.columnIndex="0" text="Pay date: "/>
        </GridPane>

    </VBox>

    <Button fx:id="history_btn_back" GridPane.rowIndex="2" GridPane.columnIndex="1" text="Back"/>


</GridPane>