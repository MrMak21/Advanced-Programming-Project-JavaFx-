<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER"  vgap="10">

    <HBox fx:id="horizontal_container_name" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">

        <Label fx:id="name_label" text="Trader name:">
            <HBox.margin>
                <Insets right="10" top="10" />
            </HBox.margin>
        </Label>
        <TextField fx:id="name_input" promptText="name">
            <HBox.margin>
                <Insets top="10" />
            </HBox.margin>
        </TextField>
    </HBox>

    <HBox fx:id="horizontal_container_company" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">

        <Label fx:id="company_label" text="Trader company:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="company_input" promptText="company"/>

    </HBox>

    <Button fx:id="btn_add_trader" text="Add trader" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="270"/>

</GridPane>