<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER"  vgap="10">

    <HBox fx:id="horizontal_container_name" alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">

        <Label fx:id="name_label" text="Item name:">
            <HBox.margin>
                <Insets right="10" top="10" />
            </HBox.margin>
        </Label>
        <TextField fx:id="name_input" promptText="name">
            <HBox.margin>
                <Insets top="10" />
            </HBox.margin>
        </TextField>
    </HBox>

    <HBox fx:id="horizontal_container_code" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">

        <Label fx:id="code_label" text="Item code:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="code_input" promptText="code"/>

    </HBox>

    <HBox fx:id="horizontal_container_price" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0">

        <Label fx:id="price_label" text="Item price:">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="price_input" promptText="price"/>
    </HBox>

    <Button fx:id="btn_add_item" text="Add item" alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="270"/>

</GridPane>