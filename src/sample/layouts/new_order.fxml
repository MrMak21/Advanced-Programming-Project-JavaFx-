<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">

    <Label fx:id="list_label" GridPane.rowIndex="0" GridPane.columnIndex="0" text="Items"/>
    <ListView fx:id="item_list" GridPane.rowIndex="1" GridPane.columnIndex="0" maxHeight="200" maxWidth="Infinity"/>

    <Label fx:id="list_label2" GridPane.rowIndex="0" GridPane.columnIndex="1" text="Traders"/>
    <ListView fx:id="traders_list" GridPane.rowIndex="1" GridPane.columnIndex="1" maxHeight="200" maxWidth="Infinity"/>

    <Button fx:id="btnAddItem" alignment="center" text="Add item" GridPane.columnIndex="0" GridPane.rowIndex="2"/>


    <Label fx:id="trader_label" GridPane.rowIndex="3" GridPane.columnIndex="0" text="Trader: "/>
    <Label fx:id="items_total" GridPane.rowIndex="3" alignment="CENTER_RIGHT" textAlignment="RIGHT" GridPane.columnIndex="1" text="Total items: 0 "/>


    <Label fx:id="item_label" GridPane.rowIndex="4" GridPane.columnIndex="0" text="Item: "/>
    <TextField fx:id="quantity_input" GridPane.columnIndex="0" GridPane.rowIndex="5" promptText="quantity"/>


    <Button fx:id="btnOrder" alignment="center" text="Place Order" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

</GridPane>